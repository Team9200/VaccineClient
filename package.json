{
  "name": "linearvaccine",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . LinearVaccine --asar --platform win32 --arch x64 --out dist/",
    "setup": "node ./util/installer.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "path": "^0.12.7",
    "python-shell": "^1.0.6",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "electron": "^3.0.4",
    "electron-prebuilt-compile": "^3.0.2",
    "electron-winstaller": "^2.7.0"
  },
  "build": {
    "productName": "VaccineClient",
    "appId": "kr.kitribob.vaccine",
    "asar": true,
    "protocols": {
      "name": "LinearVaccine",
      "schemes": [
        "linearvaccine"
      ]
    },
    "mac": {
      "target": [
        "default"
      ]
    },
    "dmg": {
      "title": "LinearVaccine"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist/",
      "app": "."
    }
  }
}
