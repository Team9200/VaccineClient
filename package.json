{
  "name": "linearvaccine",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . LinearVaccine --asar --platform win32 --arch x64 --out dist/",
    "setup": "node ./util/installer.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nodeutils/defaults-deep": "^1.1.0",
    "async": "^2.6.1",
    "fs": "0.0.1-security",
    "libp2p": "^0.23.1",
    "libp2p-mdns": "^0.12.0",
    "libp2p-mplex": "^0.8.2",
    "libp2p-railing": "^0.9.2",
    "libp2p-secio": "^0.10.0",
    "libp2p-tcp": "^0.13.0",
    "path": "^0.12.7",
    "peer-id": "^0.12.0",
    "peer-info": "^0.14.1",
    "pull-stream": "^3.6.9",
    "python-shell": "^1.0.6",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "electron": "^3.0.4",
    "electron-prebuilt-compile": "^3.0.2",
    "electron-winstaller": "^2.7.0"
  },
  "build": {
    "productName": "VaccineClient",
    "appId": "kr.kitribob.vaccine",
    "asar": true,
    "protocols": {
      "name": "LinearVaccine",
      "schemes": [
        "linearvaccine"
      ]
    },
    "mac": {
      "target": [
        "default"
      ]
    },
    "dmg": {
      "title": "LinearVaccine"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist/",
      "app": "."
    }
  }
}
